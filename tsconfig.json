{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "target": "es2017",
    "jsx": "react",
    "baseUrl": "./src",
    "typeRoots": ["./node_modules/@types", "./custom_typings"]
  },
  "include": [
    "./src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
